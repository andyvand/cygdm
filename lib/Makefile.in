srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@
interface = @interface@

SOURCES=$(interface)/libdevmapper.c libdm-common.c

INCLUDES=-I$(interface)

TARGETS=$(interface)/libdevmapper.so

include ../make.tmpl

install: @interface@/libdevmapper.so
	$(INSTALL) -o $(OWNER) -g $(GROUP) -m 555 $(STRIP) $< \
		$(libdir)
	$(INSTALL) -o $(OWNER) -g $(GROUP) -m 444 libdevmapper.h \
		$(includedir)

.PHONY: install 

