srcdir = @srcdir@
top_srcdir = @top_srcdir@
VPATH = @srcdir@

SOURCES=dmsetup.c
TARGETS=dmsetup

include ../make.tmpl

dmsetup: $(OBJECTS) $(interfacedir)/libdevmapper.so \
	 $(interfacedir)/libdevmapper.a
	$(CC) -o dmsetup $(OBJECTS) $(LD_FLAGS) \
	      -L$(interfacedir) -L$(DESTDIR)/lib $(LIBS) \
	      -ldevmapper

install: dmsetup
	$(INSTALL) -D -o $(OWNER) -g $(GROUP) -m 555 $(STRIP) $< $(sbindir)/$<

.PHONY: install 


